<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yxr.tmall.mapper.UserMapper">
    <update id="keepTokenById">
        update user set token =#{token} where id=#{id}
    </update>
    <update id="keepTokenByIds">
        update user set token =null where id=#{id}
    </update>

    <select id="queryUserByname" resultType="com.yxr.tmall.entity.User">
        select * from user where name = #{name}
    </select>
    <select id="getByNameAndPassword" resultType="com.yxr.tmall.entity.User">
        select * from user where name= #{name} and  password= #{password}
    </select>
    <select id="getUserByToken" resultType="com.yxr.tmall.entity.User">
        select * from user where token = #{token}
    </select>
    <select id="selectList" resultType="com.yxr.tmall.entity.Review">
        select * from review where uid=#{id}
    </select>
</mapper>
